<h1>Create New Plan</h1>

<form class="p-4 border rounded bg-light" id="newPlanForm" {{on "submit" this.handleSubmit}}>
  <div class="mb-3" >
    <label for="planName" class="form-label">New Plan Name</label>
    <input type="text" class="form-control" name="planName" id="planName" placeholder="Enter plan name" required>
  </div>

  <div class="mb-3">
    <label for="dateTime" class="form-label">Start Date and Time</label>
    <input type="datetime-local" class="form-control" name="dateTime" id="dateTime" required>
  </div>

  <div class="mb-3">
    <label for="goalDistanceCheck" class="form-check-label">Goal Distance</label>
    <div class="input-group mt-2">
      <input type="number" class="form-control" name="newDistance" id="newDistance" placeholder="Distance" required>
      <span class="input-group-text">Miles</span>
    </div>
  </div>

  <div class="mb-3">
    <label for="goalTimeCheck" class="form-check-label">Goal Duration</label>
    <div class="input-group mt-2">
      <input type="number" class="form-control" name="newTime" id="newTime" placeholder="Time" required>
      <span class="input-group-text">Mins</span>
    </div>
  </div>

  <button type="submit" class="btn btn-primary w-100">Create</button>
</form>


